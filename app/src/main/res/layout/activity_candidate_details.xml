<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.admin.nidhi_khushali.CandidateDetails"  >
    <TextView android:id="@+id/textViewShowAddsHeading"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/colorMaroon"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:text="Candidate Details"
        android:layout_marginTop="10dp" android:gravity="center_horizontal"
        android:fontFamily="@font/britanic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="5"
        android:padding="5dp">
        <EditText
            android:id="@+id/edSeachCandi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Search by Advertisement No"
            android:drawableLeft="@drawable/profile2"
            android:layout_weight="4"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/btnGoSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Go"
            android:textSize="15dp"
            android:layout_weight="1"
            android:background="@color/colorRedP"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


<HorizontalScrollView android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:background="#f4f4f4" android:orientation="vertical" >
        <!-- <ExpandableListView android:id="@+id/lvExp" android:layout_height="match_parent" android:layout_width="match_parent"/> -->
        <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="4dp" android:layout_marginTop="20dp" android:layout_alignParentTop="true">
            <TableRow

                android:background="@color/colorRedPd">
                <TextView android:layout_height="wrap_content" android:layout_width="100dp" android:padding="8dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="ID"/>
                <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp"  android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="Adv. Number"/>
                <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp"   android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="Full Name"/>
                <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp"   android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="Father's Name"/>
                <TextView android:layout_height="wrap_content" android:layout_width="250dp" android:padding="8dp"   android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="email Id"/>
                <TextView android:layout_height="wrap_content" android:layout_width="150dp" android:padding="8dp"   android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="Mobile No."/>
                <TextView android:layout_height="wrap_content" android:layout_width="300dp" android:padding="8dp"   android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="Division"/>
                <TextView android:layout_height="wrap_content" android:layout_width="300dp" android:padding="8dp"   android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:text="Applied For"/>
                <TextView android:layout_height="wrap_content" android:layout_width="180dp"
                    android:textSize="20dp" android:padding="8dp"
                    />
            </TableRow>
        </TableLayout>
        <ListView android:id="@+id/listViewCandidateDetails" android:layout_height="wrap_content" android:layout_width="match_parent"> </ListView>
    </LinearLayout>
</HorizontalScrollView>
</LinearLayout>