            </LinearLayout>
        </TableRow>

        <TableRow>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/editTextC3"
                android:padding="5dp"


                android:background="@drawable/table_layout"
                android:hint="Degree"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/editTextU3"
                android:padding="5dp"

