                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/table_layout">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:entries="@array/year_of_passing"
                    android:id="@+id/spY2"

                    />
            </LinearLayout>

            <EditText
                android:id="@+id/m2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/table_layout"

                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textAlignment="center" />
            <Button
                android:id="@+id/btnUpload10"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="52dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="Upload marksheet"
                android:onClick="uploadMarksheet"

                android:textAlignment="center" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/table_layout">
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spd2"

                    android:layout_height="52dp"
                    android:entries="@array/division"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textAlignment="center"
                android:id="@+id/editTextC2"
