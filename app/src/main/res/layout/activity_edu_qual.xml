<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:scrollbars="vertical"
    android:layout_height="match_parent"
    tools:context=".EduQual">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/sofia"
                android:text="Application Form"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="54dp"
                android:src="@drawable/png_image" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="Educational and Professional Qualification(Starting from 10th class) "
            android:textColor="@color/colorPurple"
            android:textSize="18dp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <TableRow >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_layout"
                android:text="Certificate/Degree "
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="@color/colorPurple"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_layout"
                android:padding="8dp"
                android:text="College University"
                android:textAlignment="center"
                android:textColor="@color/colorPurple"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year of Passing"
                android:textSize="18dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:background="@drawable/table_layout"
                android:textColor="@color/colorPurple"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter marks in percentage"
                android:textSize="18dp"
                android:textAlignment="center"
                android:padding="8dp"
                android:background="@drawable/table_layout"
                android:textColor="@color/colorPurple"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload documents here"
                android:textSize="18dp"
                android:id="@+id/textViewUpload"
                android:textAlignment="center"
                android:padding="8dp"
                android:background="@drawable/table_layout"
                android:textColor="@color/colorPurple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_layout"
                android:padding="8dp"
                android:text="Division"
                android:textAlignment="center"
                android:textColor="@color/colorPurple"
                android:textSize="18dp" />
        </TableRow>

        <TableRow >

            <EditText
                android:layout_width="193dp"
                android:layout_height="52dp"
                android:padding="5dp"
                android:background="@drawable/table_layout"
                android:hint="eg. 10th"
                android:id="@+id/editTextC"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/editTextU"
                android:textAlignment="center"
                android:padding="5dp"

                android:background="@drawable/table_layout"
                android:hint="10th College Uni./Institute" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/table_layout">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:id="@+id/spY1"
                    android:entries="@array/year_of_passing"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/m1"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="52dp"
                android:background="@drawable/table_layout"
                android:inputType="numberDecimal"
                android:textAlignment="center" />
            <Button
                android:id="@+id/btnUpload12"

                android:layout_width="match_parent"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:layout_height="52dp"
                android:background="@color/colorPrimary"
                android:text="Upload Marksheet"
                android:onClick="uploadMarksheet"

                android:textAlignment="center" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/table_layout">
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spd1"
                    android:layout_height="52dp"
                    android:entries="@array/division"
                    />
            </LinearLayout>
        </TableRow>


        <TableRow >

