<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="" />

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Programmer"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/checkbox1"
        android:text="Assistant Programmer"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/checkbox1"
        android:text="Web Application Development"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkbox1"

        android:text="IT Lab Attendant"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkbox1"

        android:layout_alignParentStart="true"
        android:text="Field_cum_lab_assistant"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:text="Research Associate"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/checkbox1"
        android:layout_alignParentStart="true"
        android:text="Research Fellow"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="Junior Research Fellow"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:text="Interns Student"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkbox10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkbox1"

        android:text="GIS_CAD Trainee"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"

        android:text="Done" />


</LinearLayout>