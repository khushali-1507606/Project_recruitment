<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPink">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:textAlignment="center"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorDarkerGreen"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/sofia"
        android:layout_alignParentTop="true"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginTop="55dp"
        android:text="Enter your email id" />

    <EditText
        android:id="@+id/editTextEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:padding="20dp"

        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextEnter"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorSeaGreen"
        android:fontFamily="@font/sofia"
        android:text="Send password"
        android:textColor="@color/colorDarkerGreen"
        android:textSize="20dp" />
</RelativeLayout>