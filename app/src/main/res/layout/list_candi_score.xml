<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <TableRow >
            <TextView
                android:id="@+id/textViewCandidDetailsID"
                android:padding="8dp"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID"
                />

            <TextView
                android:id="@+id/textViewCandidDetailsAdvNo"
                android:textColor="@color/colorBlack"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="8dp"

                android:text="Adv. Number"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/textViewCandidDetailsFullName"
                android:textColor="@color/colorBlack"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Full Name"

                android:textSize="18dp"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/textViewCandidDetailsDadName"
                android:textColor="@color/colorBlack"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Father's Name"
                android:textSize="18dp"

                android:padding="8dp"
                />

            <TextView
                android:id="@+id/textViewCandidDetailsEmail"
                android:textColor="@color/colorBlack"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="email Id"

                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewCandidDetailsMobNo"
                android:textColor="@color/colorBlack"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Mobile No."

                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/textViewCandidDetailsDivision"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:text="Division"/>

            <TextView
                android:id="@+id/textViewCandidDetailsAppliedFor"
                android:textColor="@color/colorBlack"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Applied For"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/textViewCandiScore"
                android:textColor="@color/colorBlack"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Candidate's Score"
                android:textSize="18dp"
                />
            <Button
                android:id="@+id/btnScreenshot"
                android:textColor="@color/colorWhite"
                android:layout_width="300dp"
                android:background="@color/colorYellow"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Photos"
                android:textSize="18dp"
                />


        </TableRow>
    </TableLayout>
</LinearLayout>