<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_alignParentTop="true" android:padding="8dp">


    <TableRow>

    <TextView android:layout_height="wrap_content" android:layout_width="100dp" android:padding="8dp" android:textSize="18dp" android:textColor="@color/colorBlack" android:text="ID" android:id="@+id/textViewLtA_Id"/>

    <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp" android:textSize="18dp" android:textColor="@color/colorBlack" android:text="Advt. Number" android:id="@+id/textViewLtA_AdvNo"/>

    <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp" android:textSize="18dp" android:textColor="@color/colorBlack" android:text="Description" android:id="@+id/textViewLtA_Desc"/>

    <TextView android:layout_height="wrap_content" android:layout_width="400dp" android:padding="8dp" android:textSize="18dp" android:textColor="@color/colorPrimary" android:text="Attached File" android:id="@+id/textViewLtA_AttachedFile"/>

    <TextView android:layout_height="wrap_content" android:layout_width="140dp" android:padding="8dp" android:textSize="18dp" android:textColor="@color/colorBlack" android:text="Start Date" android:id="@+id/textViewLtA_StartDate"/>

    <TextView android:layout_height="wrap_content" android:layout_width="100dp" android:padding="8dp" android:textSize="18dp" android:textColor="@color/colorBlack" android:text="End Date" android:id="@+id/textViewLtA_EndDate"/>

</TableRow>

</TableLayout>

</LinearLayout>