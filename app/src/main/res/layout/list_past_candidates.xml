<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">


    <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_alignParentTop="true" android:padding="8dp">


    <TableRow>

    <TextView android:layout_height="wrap_content" android:layout_width="100dp" android:padding="8dp" android:text="ID" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/textViewCandidDetailsID"/>

    <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp" android:text="Adv. Number" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/textViewCandidDetailsAdvNo"/>

    <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp" android:text="Full Name" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/textViewCandidDetailsFullName"/>

    <TextView android:layout_height="wrap_content" android:layout_width="180dp" android:padding="8dp" android:text="Father's Name" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/textViewCandidDetailsDadName"/>

    <TextView android:layout_height="wrap_content" android:layout_width="250dp" android:padding="8dp" android:text="email Id" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/textViewCandidDetailsEmail"/>

        <TextView
            android:id="@+id/textViewCandidDetailsMobNo"
            android:textColor="@color/colorBlack"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Mobile No."
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/textViewCandidDetailsDivision"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:padding="8dp"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            android:text="Division"/>
    <TextView android:layout_height="wrap_content" android:layout_width="300dp" android:padding="8dp" android:text="Applied For" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/textViewCandidDetailsAppliedFor"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="8dp" android:text="Edit" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/buttonCandidateDetailsEdit"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="8dp" android:text="Details" android:textSize="18dp" android:textColor="@color/colorBlack" android:id="@+id/buttonCandidateDetailsDetails"/>

</TableRow>

</TableLayout>

</LinearLayout>