<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewUserProfile"
        android:layout_width="110dp"
        android:layout_height="95dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/view_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="105dp"
        android:orientation="vertical"
        android:padding="20dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sofia"
                android:text="Name: "
                android:textColor="@color/colorPrimary"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textViewname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/sofia"
                android:text=" Keshav"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sofia"

                android:text="Email id"
                android:textColor="@color/colorPrimary"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/sofia"
                android:text=" Shweta@gaml.com "
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"

            android:textColor="@color/colorPrimary">

            <TextView
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/sofia"
                android:text="Mobile No."
                android:textColor="@color/colorPrimary"

                android:textSize="19dp" />

            <TextView
                android:id="@+id/textViewMobile"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/sofia"
                android:text="8283910958 "
                android:textSize="17dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/key_image" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/sofia"
                android:text="Change Password"
                android:textColor="@color/colorBlack"

                android:textSize="18dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="User Profile"
        android:textStyle="italic"
        android:fontFamily="@font/britanic"
        android:textColor="@color/colorWhite"
        tools:text="User Profile" />
</RelativeLayout>